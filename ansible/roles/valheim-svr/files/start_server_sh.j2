#!/bin/sh 
export templdpath=$LD_LIBRARY_PATH  
export LD_LIBRARY_PATH=./linux64:$LD_LIBRARY_PATH  
export SteamAppID=892970

echo "Starting server PRESS CTRL-C to exit"  
{{ valheim_server_path }}/valheim_server.x86_64 -name "{{ valheim_server_name }}" -port "{{ valheim_server_port }}" -nographics -batchmode -world "{{ valheim_world_name }}" -password "{{ valheim_server_pw }}" -public 1  
export LD_LIBRARY_PATH=$templdpath